<div class="container">
  <h5>Roles List</h5>
  <table class="table table-striped" style="width:70%">
    <thead>
      <tr>
        <th>Role Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td>
          <div class="d-flex gap-2">
            <%= link_to 'Edit', edit_role_path(role), class: 'btn btn-sm btn-outline-primary' %>
            <%= button_to 'Delete', role_path(role), data: { turbo_confirm: 'Are you sure you want to delete this role?' }, method: :delete, class: 'btn btn-sm btn-outline-danger' %>
            <%= link_to 'Permissions', permissions_path(role), class: 'btn btn-sm btn-outline-secondary' %>
          </div>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<p><%= link_to 'Create Role', new_role_path, class: 'btn btn-primary' %></p>
