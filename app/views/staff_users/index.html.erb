<div class="container">
  <h5>Staff User List</h5>
  <table class="table table-striped" style="width:70%">
    <thead>
      <tr>
        <th>Username</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @staff_users.each do |staf_user| %>
        <tr>
          <td><%= staf_user.username %></td>
          <td><%= staf_user.first_name %></td>
          <td><%= staf_user.last_name %></td>
          <td><%= staf_user.email %></td>
          <td><%= staf_user.role&.name %></td>
          <td>
            <div class="d-flex gap-2">
              <%= link_to 'Edit', edit_staff_user_path(staf_user), class: "btn btn-sm btn-outline-primary" %>
              <%= button_to 'Delete', staff_user_path(staf_user), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this staff user?" }, class: "btn btn-sm btn-outline-danger" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<p>
  <%= link_to 'Create Staff User', new_staff_user_path, class: "btn btn-primary" %>
</p>
